self.proj1_label = Label(self.option_window, font=("Helvetica", 12), text="Projectile", width=20)
        self.proj1_label.grid(row=next(row_counter), column=0, columnspan=2)

        self.proj_value_names = ['v0', 'vx', 'vy', 'vz', 'x0', 'y0', 'z0', 'alpha', 'theta']
        self.proj_vars = {label: DoubleVar() for label in self.proj_value_names}

        self.proj_labels = {name: Label(self.option_window, text=name) for name in self.proj_value_names}
        self.proj_inputs = {name: Entry(self.option_window, textvariable=self.proj_vars[name]) \
                              for name in self.proj_value_names}

        self.proj_inputs = {name: Entry(self.option_window, textvariable=self.proj_vars[name]) \
                              for name in self.proj_value_names[:7]}

        self.proj_inputs.update({'alpha': Scale(self.option_window, variable=self.proj_vars['alpha'],
                                                tickinterval=0.01, from_=0, to=90, orient=HORIZONTAL, length=120),
                                 'theta': Scale(self.option_window, variable=self.proj_vars['theta'],
                                                tickinterval=0.01, from_=0, to=360, orient=HORIZONTAL, length=120)})

        for name in self.proj_value_names[:7]:
            self.proj_inputs[name].bind('<Return>',
                              lambda event: self.spiral_change(event, self.vis.plotter.proj,
                                                               self.proj_vars[name].get(), name))
            row_index = next(row_counter)
            self.proj_labels[name].grid(row=row_index, column=0)
            self.proj_inputs[name].grid(row=row_index, column=1)

        for name in self.proj_value_names[7:]:
            self.proj_inputs[name].bind('<B1-Motion>',
                              lambda event: self.spiral_change(event, self.vis.plotter.proj,
                                                               self.proj_vars[name].get(), name))
            row_index = next(row_counter)
            self.proj_labels[name].grid(row=row_index, column=0)
            self.proj_inputs[name].grid(row=row_index, column=1)